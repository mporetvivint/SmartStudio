<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smart_studio_portrait"
    android:gravity="center_horizontal"
    tools:context="com.sunrun.leaguemediaassistant.GUI.NoWifiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/no_wifi_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aldrich"
        android:text="Wifi is Disconnected"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/no_wifi_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/nowifi" />
</RelativeLayout>
